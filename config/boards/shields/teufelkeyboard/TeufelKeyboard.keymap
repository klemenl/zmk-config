#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
                &kp K   &kp L
                &kp 1   &kp 2
                &kp C_VOLUME_UP &mo 1
            >;
        };

        bt_layer {
            bindings = <
                &kp 1 &kp 2
                &kp 3 &kp 4
                &none &none
            >;
        };
    };
};